<Window x:Class="Dualshock4Customizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DS4 Customizer Pro" Height="750" Width="1100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <!-- Sol: Kontrolcu Listesi -->
        <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="0,0,1,0">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="Kontrolculer" FontSize="14" FontWeight="Bold" Margin="10"/>
                <ListBox Name="ControllerListBox" Margin="5" SelectionChanged="ControllerListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="3">
                                <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" FontSize="11"/>
                                <TextBlock FontSize="10">
                                    <Run Text="Pil: "/><Run Text="{Binding BatteryPercent, Mode=OneWay}"/><Run Text="%"/>
                                </TextBlock>
                                <TextBlock FontSize="9" Foreground="DarkGreen" FontStyle="Italic" Margin="0,2,0,0" Text="{Binding ActiveProfileName, Mode=OneWay}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Orta: Ayarlar -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Margin="15" Name="SettingsPanel" IsEnabled="False">
                <TextBlock Name="SelectedControllerTitle" Text="Kontrolcu secin" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Name="SelectedControllerStatus" Text="" FontSize="10" Foreground="Gray" TextWrapping="Wrap" Margin="0,0,0,15"/>
                
                <!-- LED Rengi -->
                <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,0,0,15" CornerRadius="5" Background="#F9F9F9">
                    <StackPanel>
                        <TextBlock Text="LED Rengi" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                        <ComboBox Name="ColorSelector" SelectedIndex="2" Margin="0,0,0,10" SelectionChanged="ColorSelector_SelectionChanged">
                            <ComboBoxItem Content="Kirmizi" Tag="Kirmizi"/>
                            <ComboBoxItem Content="Yesil" Tag="Yesil"/>
                            <ComboBoxItem Content="Mavi" Tag="Mavi"/>
                            <ComboBoxItem Content="Turuncu" Tag="Turuncu"/>
                            <ComboBoxItem Content="Beyaz" Tag="Beyaz"/>
                            <ComboBoxItem Content="Rainbow (Gokkusagi)" Tag="Rainbow"/>
                            <ComboBoxItem Content="Kapali" Tag="Kapali"/>
                            <ComboBoxItem Content="Ozel Renk Sec..." Tag="OzelRenk"/>
                        </ComboBox>
                        <Button Content="RGB Renk Secici Ac" Click="RgbColorPickerButton_Click" Padding="8,5"/>
                    </StackPanel>
                </Border>

                <!-- LED Efekt -->
                <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,0,0,15" CornerRadius="5" Background="#F9F9F9">
                    <StackPanel>
                        <TextBlock Text="LED Efekti" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                        <Button Content="Breathing (Nefes Alma)" Click="EffectBreathingButton_Click" Padding="8,5" Margin="0,0,0,5"/>
                        <Button Content="Efekti Durdur" Click="EffectStopButton_Click" Padding="8,5" Background="#FFE0E0"/>
                    </StackPanel>
                </Border>
                
                <!-- Dusuk Pil Ayarlari -->
                <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,0,0,15" CornerRadius="5" Background="#F9F9F9">
                    <StackPanel>
                        <TextBlock Text="Dusuk Pil Uyarilari" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                        <CheckBox Name="VibrationCheckbox" Content="Titresim Uyarisi" Margin="0,0,0,5" Checked="NotificationCheckbox_Changed" Unchecked="NotificationCheckbox_Changed"/>
                        <CheckBox Name="FlashCheckbox" Content="Renk Uyarisi (Kirmizi)" IsChecked="True" Margin="0,0,0,10" Checked="NotificationCheckbox_Changed" Unchecked="NotificationCheckbox_Changed"/>
                        <TextBlock Name="NotificationStatusText" Text="" FontSize="10" Foreground="Gray"/>
                    </StackPanel>
                </Border>

                <!-- Gelismis Ozellikler -->
                <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" CornerRadius="5" Background="#F9F9F9">
                    <StackPanel>
                        <TextBlock Text="Gelismis Ozellikler" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                        <CheckBox Name="MinimizeToTrayCheckbox" Content="Sistem tepsisine kucult" IsChecked="True" Margin="0,0,0,5"/>
                        <Button Content="Oyun Algilama Ac/Kapat" Click="ToggleGameDetectionButton_Click" Padding="8,5" Margin="0,0,0,5"/>
                        <TextBlock Name="GameDetectionStatusText" Text="Oyun algilama: Kapali" FontSize="10" Foreground="Gray" Margin="5"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Sag: Profiller - Gelismis -->
        <Border Grid.Column="2" BorderBrush="LightGray" BorderThickness="1,0,0,0" Background="#F5F5F5">
            <DockPanel>
                <!-- Baslik ve Arama -->
                <StackPanel DockPanel.Dock="Top" Margin="10">
                    <TextBlock Text="Profiller" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>
                    <TextBox Name="ProfileSearchBox" Text="" Height="25" Padding="5,3" TextChanged="ProfileSearchBox_TextChanged"/>
                </StackPanel>
                
                <!-- Alt Butonlar -->
                <StackPanel DockPanel.Dock="Bottom" Margin="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="+ Yeni Profil" Click="NewProfileButton_Click" Padding="8,5" Margin="0,0,3,5" Background="#E8F5E9"/>
                        <Button Grid.Column="1" Content="Duzenle" Click="EditProfileButton_Click" Padding="8,5" Margin="3,0,0,5"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="Yukle" Click="LoadProfileButton_Click" Padding="8,5" Margin="0,0,3,5" Background="#E3F2FD"/>
                        <Button Grid.Column="1" Content="Kopyala" Click="DuplicateProfileButton_Click" Padding="8,5" Margin="3,0,0,5"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="Favori" Click="ToggleFavoriteButton_Click" Padding="8,5" Margin="0,0,3,5"/>
                        <Button Grid.Column="1" Content="Eslestir" Click="LinkProfileButton_Click" Padding="8,5" Margin="3,0,0,5"/>
                    </Grid>
                    <Separator Margin="0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="Disa Aktar" Click="ExportProfileButton_Click" Padding="8,5" Margin="0,0,3,0"/>
                        <Button Grid.Column="1" Content="Ice Aktar" Click="ImportProfileButton_Click" Padding="8,5" Margin="3,0,0,0"/>
                    </Grid>
                    <Button Content="Sil" Click="DeleteProfileButton_Click" Padding="8,5" Margin="0,5,0,0" Background="#FFEBEE" Foreground="#C62828"/>
                </StackPanel>
                
                <!-- Profil Listesi - Gelismis Gorunum -->
                <ListBox Name="ProfileListBox" Margin="10,5" BorderThickness="0" Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,2" Padding="10" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Ikon -->
                                    <TextBlock Grid.Column="0" Text="{Binding IconEmoji}" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    
                                    <!-- Bilgiler -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding ProfileName}" FontWeight="Bold" FontSize="12"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding CategoryLabel}" FontSize="9" Foreground="Gray" Margin="0,2,0,0"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                            <TextBlock FontSize="9" Foreground="DimGray">
                                                <Run Text="RGB: "/>
                                                <Run Text="{Binding LedR}"/><Run Text=","/>
                                                <Run Text="{Binding LedG}"/><Run Text=","/>
                                                <Run Text="{Binding LedB}"/>
                                                <Run Text=" | Efekt: "/><Run Text="{Binding EffectType}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>
    </Grid>
</Window>
