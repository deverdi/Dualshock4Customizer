<Window x:Class="Dualshock4Customizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DS4 Customizer Pro" 
        Height="850" 
        Width="1250"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5"
        Loaded="Window_Loaded">
    
    <Window.Resources>
        <LinearGradientBrush x:Key="BatteryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#E3F2FD" Offset="0"/>
            <GradientStop Color="#BBDEFB" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="ConnectionGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F1F8E9" Offset="0"/>
            <GradientStop Color="#DCEDC8" Offset="1"/>
        </LinearGradientBrush>

        <!-- GUNCELLENMIS: Daha kalin ve daha kisa butonlar -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,8"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" BorderThickness="0">
                            <Border.Effect>
                                <DropShadowEffect Color="#40000000" BlurRadius="10" ShadowDepth="3" Opacity="0.35"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#30000000" BlurRadius="12" ShadowDepth="2" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="380"/>
        </Grid.ColumnDefinitions>

        <!-- Sol Panel -->
        <Border Grid.Column="0" Background="#FFFFFF" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <DockPanel>
                <Border DockPanel.Dock="Top" Background="#2196F3" Padding="20,16">
                    <StackPanel>
                        <TextBlock Text="Kontrolculer" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Bagli Cihazlar" FontSize="11" Foreground="#E3F2FD" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <ListBox Name="ControllerListBox" Margin="8" BorderThickness="0" Background="Transparent" SelectionChanged="ControllerListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="10" Padding="14" Margin="0,4" BorderBrush="#E0E0E0" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" FontSize="13" Foreground="#212121"/>
                                    <Border Background="#E3F2FD" CornerRadius="4" Padding="6,3" Margin="0,6,0,0" HorizontalAlignment="Left">
                                        <TextBlock FontSize="11" Foreground="#1976D2">
                                            <Run Text="Pil: "/><Run Text="{Binding BatteryPercent, Mode=OneWay}"/><Run Text="%"/>
                                        </TextBlock>
                                    </Border>
                                    <TextBlock FontSize="10" Foreground="#4CAF50" FontStyle="Italic" Margin="0,6,0,0" Text="{Binding ActiveProfileName, Mode=OneWay}" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Orta Panel -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24" Name="SettingsPanel" IsEnabled="False">
                
                <!-- 3D DS4 Controller Card -->
                <Border Style="{StaticResource Card}" BorderBrush="#2196F3" BorderThickness="2" Background="#1A1A1A">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="350"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Name="SelectedControllerTitle" Text="DualShock 4 Controller - 3D" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,16" HorizontalAlignment="Center"/>
                        
                        <!-- 3D Viewport -->
                        <Border Grid.Row="1" Background="#0D0D0D" CornerRadius="10" ClipToBounds="True">
                            <Viewport3D Name="MainViewport" MouseMove="Viewport_MouseMove" MouseLeftButtonDown="Viewport_MouseDown" MouseLeftButtonUp="Viewport_MouseUp">
                                <Viewport3D.Camera>
                                    <PerspectiveCamera x:Name="Camera" Position="0,0,15" LookDirection="0,0,-1" UpDirection="0,1,0" FieldOfView="50"/>
                                </Viewport3D.Camera>
                                
                                <ModelVisual3D>
                                    <ModelVisual3D.Content>
                                        <Model3DGroup x:Name="ControllerModel">
                                            <AmbientLight Color="#808080"/>
                                            <DirectionalLight Color="White" Direction="-1,-1,-3"/>
                                            <DirectionalLight Color="#606060" Direction="1,1,3"/>
                                            
                                            <GeometryModel3D>
                                                <GeometryModel3D.Geometry>
                                                    <MeshGeometry3D Positions="-2,-1,0  2,-1,0  2,1,0  -2,1,0  -2,-1,-0.5  2,-1,-0.5  2,1,-0.5  -2,1,-0.5"
                                                                    TriangleIndices="0,1,2 0,2,3 4,7,6 4,6,5 0,4,5 0,5,1 1,5,6 1,6,2 2,6,7 2,7,3 3,7,4 3,4,0"/>
                                                </GeometryModel3D.Geometry>
                                                <GeometryModel3D.Material>
                                                    <DiffuseMaterial Brush="#2C2C2C"/>
                                                </GeometryModel3D.Material>
                                            </GeometryModel3D>
                                            
                                            <GeometryModel3D>
                                                <GeometryModel3D.Geometry>
                                                    <MeshGeometry3D Positions="-2,-1,0  -2.5,-2,0  -2.5,-2,-0.5  -2,-1,-0.5"
                                                                    TriangleIndices="0,1,2 0,2,3"/>
                                                </GeometryModel3D.Geometry>
                                                <GeometryModel3D.Material>
                                                    <DiffuseMaterial Brush="#2C2C2C"/>
                                                </GeometryModel3D.Material>
                                            </GeometryModel3D>
                                            
                                            <GeometryModel3D>
                                                <GeometryModel3D.Geometry>
                                                    <MeshGeometry3D Positions="2,-1,0  2.5,-2,0  2.5,-2,-0.5  2,-1,-0.5"
                                                                    TriangleIndices="0,2,1 0,3,2"/>
                                                </GeometryModel3D.Geometry>
                                                <GeometryModel3D.Material>
                                                    <DiffuseMaterial Brush="#2C2C2C"/>
                                                </GeometryModel3D.Material>
                                            </GeometryModel3D>
                                            
                                            <GeometryModel3D>
                                                <GeometryModel3D.Geometry>
                                                    <MeshGeometry3D Positions="-1,0.3,0.01  1,0.3,0.01  1,0.8,0.01  -1,0.8,0.01"
                                                                    TriangleIndices="0,1,2 0,2,3"/>
                                                </GeometryModel3D.Geometry>
                                                <GeometryModel3D.Material>
                                                    <DiffuseMaterial Brush="#1A1A1A"/>
                                                </GeometryModel3D.Material>
                                            </GeometryModel3D>
                                            
                                            <GeometryModel3D x:Name="LightBarModel">
                                                <GeometryModel3D.Geometry>
                                                    <MeshGeometry3D Positions="-1.5,0.95,0.02  1.5,0.95,0.02  1.5,1.05,0.02  -1.5,1.05,0.02"
                                                                    TriangleIndices="0,1,2 0,2,3"/>
                                                </GeometryModel3D.Geometry>
                                                <GeometryModel3D.Material>
                                                    <DiffuseMaterial x:Name="LightBarMaterial">
                                                        <DiffuseMaterial.Brush>
                                                            <SolidColorBrush x:Name="LightBarBrush" Color="#2196F3"/>
                                                        </DiffuseMaterial.Brush>
                                                    </DiffuseMaterial>
                                                </GeometryModel3D.Material>
                                            </GeometryModel3D>
                                            
                                            <GeometryModel3D>
                                                <GeometryModel3D.Geometry>
                                                    <MeshGeometry3D Positions="-0.15,-0.2,0.01  0.15,-0.2,0.01  0.15,0,0.01  -0.15,0,0.01"
                                                                    TriangleIndices="0,1,2 0,2,3"/>
                                                </GeometryModel3D.Geometry>
                                                <GeometryModel3D.Material>
                                                    <DiffuseMaterial Brush="#1A1A1A"/>
                                                </GeometryModel3D.Material>
                                            </GeometryModel3D>
                                        </Model3DGroup>
                                    </ModelVisual3D.Content>
                                </ModelVisual3D>
                            </Viewport3D>
                        </Border>
                        
                        <StackPanel Grid.Row="2" Margin="0,16,0,0">
                            <Border Background="{StaticResource ConnectionGradient}" CornerRadius="10" Padding="16,12" Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Ellipse Width="12" Height="12" Fill="#4CAF50" VerticalAlignment="Center" Margin="0,0,10,0">
                                        <Ellipse.Effect>
                                            <DropShadowEffect Color="#4CAF50" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                    <TextBlock Text="Connection: " FontSize="14" Foreground="#388E3C" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    <TextBlock Name="SelectedControllerConnection" Text="Bluetooth" FontWeight="Bold" Foreground="#1B5E20" FontSize="16" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <TextBlock Text="Sol tiklayip surukleyerek cevirin" FontSize="11" Foreground="#9E9E9E" HorizontalAlignment="Center" FontStyle="Italic"/>
                        </StackPanel>
                        
                        <Grid Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0">
                            <Grid Width="100" Height="100">
                                <Ellipse Width="100" Height="100" Fill="#204CAF50" Opacity="0.2">
                                    <Ellipse.Effect>
                                        <BlurEffect Radius="15"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                <Ellipse Width="80" Height="80" Stroke="#E0E0E0" StrokeThickness="8" Fill="White" Margin="10"/>
                                <Ellipse x:Name="BatteryProgressCircle" Width="80" Height="80" Stroke="#4CAF50" StrokeThickness="8" Fill="Transparent" StrokeDashArray="251" StrokeDashOffset="63" RenderTransformOrigin="0.5,0.5" Margin="10">
                                    <Ellipse.RenderTransform>
                                        <RotateTransform Angle="-90"/>
                                    </Ellipse.RenderTransform>
                                    <Ellipse.Effect>
                                        <DropShadowEffect Color="#4CAF50" BlurRadius="8" ShadowDepth="0" Opacity="0.5"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Name="SelectedControllerBattery" Text="85%" FontSize="24" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                                    <TextBlock Text="BAT" FontSize="8" FontWeight="SemiBold" Foreground="#9E9E9E" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>

                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Renk Secimi" FontSize="16" FontWeight="Bold" Margin="0,0,0,12" Foreground="#212121"/>
                        <ComboBox Name="ColorSelector" SelectedIndex="2" SelectionChanged="ColorSelector_SelectionChanged" FontSize="13" Padding="12,8">
                            <ComboBoxItem Content="Kirmizi" Tag="Kirmizi"/>
                            <ComboBoxItem Content="Yesil" Tag="Yesil"/>
                            <ComboBoxItem Content="Mavi" Tag="Mavi"/>
                            <ComboBoxItem Content="Turuncu" Tag="Turuncu"/>
                            <ComboBoxItem Content="Beyaz" Tag="Beyaz"/>
                            <ComboBoxItem Content="Sari" Tag="Sari"/>
                            <ComboBoxItem Content="Mor" Tag="Mor"/>
                            <ComboBoxItem Content="Rainbow" Tag="Rainbow"/>
                            <ComboBoxItem Content="Kapali" Tag="Kapali"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="LED Efektleri" FontSize="16" FontWeight="Bold" Margin="0,0,0,12" Foreground="#212121"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="Breathing" Click="EffectBreathingButton_Click" Background="#4CAF50" Style="{StaticResource ModernButton}" Margin="0,0,6,0"/>
                            <Button Grid.Column="1" Content="Durdur" Click="EffectStopButton_Click" Background="#F44336" Style="{StaticResource ModernButton}" Margin="6,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Test Araclari" FontSize="16" FontWeight="Bold" Margin="0,0,0,12" Foreground="#212121"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="LED Test" Click="LedTestButton_Click" Background="#FF9800" Style="{StaticResource ModernButton}" Margin="0,0,6,0"/>
                            <Button Grid.Column="1" Content="Titresim" Click="VibrationTestButton_Click" Background="#9C27B0" Style="{StaticResource ModernButton}" Margin="6,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Card}" BorderBrush="#4CAF50" BorderThickness="2">
                    <StackPanel>
                        <TextBlock Text="Profil Islemleri" FontSize="16" FontWeight="Bold" Margin="0,0,0,12" Foreground="#212121"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Row="0" Grid.Column="0" Content="Duzenle" Click="EditActiveProfileButton_Click" Background="#4CAF50" Style="{StaticResource ModernButton}" Margin="0,0,6,6"/>
                            <Button Grid.Row="0" Grid.Column="1" Content="Yenile" Click="ReloadActiveProfileButton_Click" Background="#4CAF50" Style="{StaticResource ModernButton}" Margin="6,0,0,6"/>
                            <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Content="Profil Olarak Kaydet" Click="SaveAsProfileButton_Click" Background="#66BB6A" Style="{StaticResource ModernButton}" Margin="0,0,0,6"/>
                            <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Content="Profille Eslestir" Click="LinkProfileButton_Click" Background="#81C784" Style="{StaticResource ModernButton}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Gelismis Ozellikler" FontSize="16" FontWeight="Bold" Margin="0,0,0,12" Foreground="#212121"/>
                        <CheckBox Name="MinimizeToTrayCheckbox" Content="Sistem tepsisine kucult" IsChecked="True" Margin="0,0,0,10" FontSize="13"/>
                        <Button Content="Oyun Algilama Ac/Kapat" Click="ToggleGameDetectionButton_Click" Background="#607D8B" Style="{StaticResource ModernButton}" Margin="0,0,0,8"/>
                        <TextBlock Name="GameDetectionStatusText" Text="Oyun algilama: Kapali" FontSize="11" Foreground="#757575" Margin="8,4,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Sag Panel -->
        <Border Grid.Column="2" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="1,0,0,0">
            <DockPanel>
                <Border DockPanel.Dock="Top" Background="#673AB7" Padding="20,16">
                    <StackPanel>
                        <TextBlock Text="Profiller" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <TextBox Name="ProfileSearchBox" Height="32" Padding="10,6" Margin="0,10,0,0" TextChanged="ProfileSearchBox_TextChanged" Background="White" BorderBrush="#E1BEE7" BorderThickness="1"/>
                    </StackPanel>
                </Border>

                <Border DockPanel.Dock="Bottom" Background="White" Padding="12" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
                    <StackPanel>
                        <UniformGrid Columns="2" Rows="4">
                            <Button Content="Yeni" Click="NewProfileButton_Click" Background="#4CAF50" Style="{StaticResource ModernButton}" Margin="0,0,4,6"/>
                            <Button Content="Duzenle" Click="EditProfileButton_Click" Background="#2196F3" Style="{StaticResource ModernButton}" Margin="4,0,0,6"/>
                            <Button Content="Yukle" Click="LoadProfileButton_Click" Background="#03A9F4" Style="{StaticResource ModernButton}" Margin="0,0,4,6"/>
                            <Button Content="Kopyala" Click="DuplicateProfileButton_Click" Background="#00BCD4" Style="{StaticResource ModernButton}" Margin="4,0,0,6"/>
                            <Button Content="Favori" Click="ToggleFavoriteButton_Click" Background="#FF9800" Style="{StaticResource ModernButton}" Margin="0,0,4,6"/>
                            <Button Content="Eslestir" Click="LinkProfileButton_Click" Background="#9C27B0" Style="{StaticResource ModernButton}" Margin="4,0,0,6"/>
                            <Button Content="Disa Aktar" Click="ExportProfileButton_Click" Background="#607D8B" Style="{StaticResource ModernButton}" Margin="0,0,4,6"/>
                            <Button Content="Ice Aktar" Click="ImportProfileButton_Click" Background="#795548" Style="{StaticResource ModernButton}" Margin="4,0,0,6"/>
                        </UniformGrid>
                        <Button Content="Sil" Click="DeleteProfileButton_Click" Background="#F44336" Style="{StaticResource ModernButton}" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <ListBox Name="ProfileListBox" Margin="12,8" BorderThickness="0" Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="10" Padding="14" Margin="0,4" BorderBrush="#E0E0E0" BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0" Background="#F3E5F5" Width="40" Height="40" CornerRadius="8" Margin="0,0,12,0">
                                        <TextBlock Text="{Binding IconEmoji}" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding ProfileName}" FontWeight="Bold" FontSize="13" Foreground="#212121"/>
                                        <TextBlock Text="{Binding CategoryLabel}" FontSize="10" Foreground="#9C27B0" Margin="0,2,0,0"/>
                                        <Border Background="#E3F2FD" CornerRadius="4" Padding="6,2" Margin="0,6,0,0" HorizontalAlignment="Left">
                                            <TextBlock FontSize="9" Foreground="#1976D2">
                                                <Run Text="RGB: "/><Run Text="{Binding LedR}"/><Run Text=","/><Run Text="{Binding LedG}"/><Run Text=","/><Run Text="{Binding LedB}"/><Run Text=" | "/><Run Text="{Binding EffectType}"/>
                                            </TextBlock>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>
    </Grid>
</Window>

